{
  "exclude": [
    "dist",
    "node_modules",
    "**/*_test.ts",
    "**/*_test.tsx"
  ],
  "include": ["**/*.{ts,tsx}"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noResolve": false,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    // "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib": [
      "esnext",
      "dom"
    ]
  }
}
